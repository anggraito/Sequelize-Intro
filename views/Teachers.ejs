<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Teacher</title>
  </head>

  <body>
  <center><h3>Teachers data</h3><center><br>
  <br><br>
  <center>
  <table>
    <tr>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan='2'></th>
    </tr>
    <% data_teacher.forEach(teacher =>{%>
    <tr>
      <td><%= teacher.id %></td>
      <td><%= teacher.first_name %></td>
      <td><%= teacher.last_name %></td>
      <td><%= teacher.email %></td>
    </tr>
      <%})%>
    </table>
  </center>
  </body>
</html>
