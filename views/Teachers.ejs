<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

  <title>Teacher Page</title>
  </head>

  <body>
  <center><h3>Teachers data</h3><center><br>
  <a href="/teachers/add"><button type="Submit" name="Add">Add New Teacher</button></a>
  <br><br>
  <form action="/teachers" method="post">
    <center>
    <table>
      <tr>
        <th>No</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan='2'></th>
      </tr>
      <% data_teachers.forEach((teacher , index) =>{%>
      <tr>
        <td><%= index + 1%></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.SubjectId%></td>
        <td><a href="/teachers/edit/<%= teacher.id %>"><button type="button" name="Edit">EDIT</button></a></td>
        <td><a href="/teachers/delete/<%= teacher.id %>"><button type="button" name="Delete">DELETE</button></a></td>
      </tr>
        <%})%>
      </table>
    </center>
  </form>
  </body>
</html>
