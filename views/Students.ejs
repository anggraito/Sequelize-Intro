<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  <title>Student Page</title>
  </head>

  <body>
  <%- include layout/menu%>
  <center><h3>Students data</h3><center><br>
    <a href="/students/add"><button type="Submit" name="Add">Add New Student</button></a>
    <br><br>
    <form action="/students" method="POST">
      <br><br>
      <center>
      <table>
        <tr>
          <th>No</th>
          <!-- <th>ID Students</th> -->
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Degree</th>
          <th colspan='3'></th>
        </tr>
        <% data_students.forEach((student, index) =>{ %>
        <tr>
          <td><%= index + 1 %></td>
          <!-- <td><%= student.id %></td> -->
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><%= student.jurusan %></td>
          <td><td><a href="/students/addsubject/<%=student.id%>">Add Subject</a></td>
          <td><a href="/students/edit/<%= student.id %>"><button type="button" name="Edit">EDIT</button></a></td>
          <td><a href="/students/delete/<%= student.id %>"><button type="button" name="Delete">DELETE</button></a></td>
        </tr>
          <%})%>
        </table>
      </center>
    </form>
  </body>
</html>
